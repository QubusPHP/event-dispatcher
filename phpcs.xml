<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/squizlabs/php_codesniffer/phpcs.xsd">

    <arg name="basepath" value="."/>
    <arg name="cache" value=".phpcs-cache"/>
    <arg name="colors"/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="80"/>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Paths to check -->
    <file>./ActionFilter</file>
    <file>./BaseEvent.php</file>
    <file>./CallableListener.php</file>
    <file>./Dispatcher.php</file>
    <file>./DispatcherImmutable.php</file>
    <file>./Event.php</file>
    <file>./EventDispatcher.php</file>
    <file>./EventListener.php</file>
    <file>./EventSubscriber.php</file>
    <file>./GenericEvent.php</file>
    <file>./ListenerPriorityQueue.php</file>

    <!-- Include rules from the Qubus Coding Standard -->
    <rule ref="QubusCodingStandard"/>
</ruleset>